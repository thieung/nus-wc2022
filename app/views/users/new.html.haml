.grid-box.col-xs-12.col-sm-12.col-md-6.col-lg-6.col-md-offset-3
  %header.box-header
    %h2.section--title.bigTitle Tạo mới thành viên
  .box-content.clearfix
    = form_for(@user, as: :user, url: users_path(@user)) do |f|
      - if @user.errors.present?
        #error_container
          .error-content.clearfix
            %ul
              - @user.errors.full_messages.each do |message|
                %li.m-t-sm= message
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Email"
      .form-group
        = f.label :full_name
        = f.text_field :full_name, class: 'form-control', placeholder: "Tên hiển thị"
      .form-group
        .checkbox.pull-left
          = check_box_tag :can_join_to_predict_champion
          %label{for: 'can_join_to_predict_champion'} Có thể tham gia event dự đoán đội vô địch?
      .form-group.clear-both.pull-right
        %button.btn.btn-primary.submit-btn-custom.ladda-button{type: "submit", "data-style"=>"zoom-in", "data-spinner-color"=>"#ccc"} Gửi
